<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/payment_success_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:scaleType="center"
        android:src="@drawable/ic_success_icon" />

    <TextView
        android:id="@+id/payment_success_message"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/payment_success_icon"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Payment successful"
        android:textAlignment="center"
        android:textColor="#717171"
        android:textSize="24dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold" />

    <TextView
        android:id="@+id/payment_recipient_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_success_message"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:text="Recipient:"
        android:textColor="#717171"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/payment_recipient_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_success_message"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp"
        android:text="Recipient Name"
        android:textColor="#717171"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/payment_amount_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_recipient_title"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:text="Transfer Amount:"
        android:textColor="#717171"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/payment_amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_recipient_value"
        android:layout_alignParentRight="true"
        android:layout_marginRight= "25dp"
        android:layout_marginTop="15dp"
        android:text="Transfer amount"
        android:textColor="#717171"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/payment_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_amount_title"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:text="Payment date:"
        android:textColor="#717171"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/payment_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_amount_value"
        android:layout_alignParentRight="true"
        android:layout_marginRight= "25dp"
        android:layout_marginTop="15dp"
        android:text="Payment date"
        android:textColor="#717171"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/payment_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_date_title"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:text="Payment time: "
        android:textColor="#717171"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/payment_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_date_value"
        android:layout_alignParentRight="true"
        android:layout_marginRight= "25dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="60dp"
        android:text="Payment time"
        android:textColor="#717171"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/payment_time_value"></LinearLayout>


</RelativeLayout>